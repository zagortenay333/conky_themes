#====================================
#   Conky Settings
#====================================
background yes
update_interval 1
double_buffer yes
no_buffers yes
imlib_cache_size 10

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_graph_size 26 80
show_graph_scale no
show_graph_range no


#====================================
#   Window Specifications
#====================================
gap_x 100
gap_y 70
minimum_size 268 390
maximum_width 268
own_window yes
own_window_type normal  # other options are: override/dock/desktop/panel
own_window_transparent yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
border_inner_margin 0
border_outer_margin 0
#alignment middle_middle
#own_window_argb_visual yes
#own_window_argb_value 0


#====================================
#   Text Settings
#====================================
use_xft yes
xftalpha 0
xftfont Droid Sans:size=10
text_buffer_size 256
override_utf8_locale yes


#====================================
#   Color Scheme
#====================================
default_color 2C2C2C
color1 2C2C2C
color2 2C2C2C
color3 FFFFFF
color4 6598CB
color5 666666
color6 CB6565
color7 DDDDDD


#====================================
#   API Key
#====================================
template6 ""


#====================================
#   City ID
#====================================
template7 ""


#====================================
#   Temp Unit (default, metric, imperial)
#====================================
template8 metric


#====================================
#   Locale (e.g. "es_ES.UTF-8")
#   Leave empty for default
#   Leave the quotes
#====================================
template9 ""


###################################################
###################################################


TEXT
#----------------------------------------
#   CURL
#----------------------------------------
\
\
${execi 300 l=${template9}; l=${l%%_*}; curl -s "api.openweathermap.org/data/2.5/forecast/daily?APPID=${template6}&id=${template7}&cnt=5&units=${template8}&lang=$l" -o ~/.cache/forecast.json}\
${execi 300 l=${template9}; l=${l%%_*}; curl -s "api.openweathermap.org/data/2.5/weather?APPID=${template6}&id=${template7}&cnt=5&units=${template8}&lang=$l" -o ~/.cache/weather.json}\
\
\
#----------------------------------------
#   Misc Images
#----------------------------------------
\
\
${execi 300 cp -f ~/.harmattan-assets/photos/big-4px/$(jq .weather[0].id ~/.cache/weather.json).png ~/.cache/weather.png}${image ~/.cache/weather.png -p 20,25 -s 228x229}\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/border.png -p 19,24 -s 230x230}\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/bottom-bg-2.png -p 19,254 -s 230x110}\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/separator-v.png -p 95,270 -s 1x83}\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/separator-v.png -p 172,270 -s 1x83}\
\
\
#----------------------------------------
#   Day names
#----------------------------------------
\
\
${color2}${voffset 268}${alignc 77}${execi 300 LANG=${template9} LC_TIME=${template9} date +%^a}
${color2}${voffset -17}${alignc}${execi 300 LANG=${template9} LC_TIME=${template9} date -d +1day +%^a}
${color2}${voffset -17}${alignc -77}${execi 300 LANG=${template9} LC_TIME=${template9} date -d +2day +%^a}
\
\
#----------------------------------------
#   Temperatures
#----------------------------------------
\
\
${color2}${voffset 53}${alignc 77}${execi 300 jq -r .list[0].temp.min ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°/${execi 300 jq -r .list[0].temp.max ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°
${color2}${voffset -17}${alignc}${execi 300 jq -r .list[1].temp.min ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°/${execi 300 jq -r .list[1].temp.max ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°
${color2}${voffset -17}${alignc -77}${execi 300 jq -r .list[2].temp.min ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°/${execi 300 jq -r .list[2].temp.max ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°
\
\
#----------------------------------------
#   Conditions
#----------------------------------------
\
\
${color3}${font Droid Sans:size=48}${goto 32}${voffset -204}${execi 300 jq -r .main.temp ~/.cache/weather.json | awk '{print int($1+0.5)}' # round num}°${font}\
${color3}${alignr 54}${voffset -162}${execi 300 jq -r .main.pressure ~/.cache/weather.json | awk '{print int($1+0.5)}' # round num} hPa
${color3}${alignr 54}${voffset 20}${execi 300 jq -r .main.humidity ~/.cache/weather.json | awk '{print int($1+0.5)}' # round num} %
${color3}${alignr 54}${voffset 20}${execi 300 jq -r .wind.speed ~/.cache/weather.json | awk '{print int($1+0.5)}' # round num}${if_match "$template8" == "metric"} m/s${else}${if_match "$template8" == "default"} m/s${else}${if_match "$template8" == "imperial"} mi/h${endif}${endif}${endif}
${color3}${alignr 54}${voffset 20}${execi 300 date -d "@$(jq -r .sys.sunrise ~/.cache/weather.json)" +%-I:%M\ %P}
${color3}${alignr 54}${voffset 20}${execi 300 date -d "@$(jq -r .sys.sunset ~/.cache/weather.json)" +%-I:%M\ %P}
${color3}${font Droid Sans :size=12}${goto 46}${voffset 26}${execi 300 jq -r .weather[0].description ~/.cache/weather.json | sed 's|\<.|\U&|g'}${font}\
\
\
#----------------------------------------
#   Weather icons
#----------------------------------------
\
\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/pressure.png -p 224,37 -s 16x16}\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/humidity.png -p 224,74 -s 16x16}\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/wind-2.png -p 224,111 -s 16x16}\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/sunrise.png -p 224,148 -s 16x16}\
${image ~/.harmattan-assets/misc/Zukitwo/Comfortable/sunset.png -p 224,185 -s 16x16}\
${execi 300 cp -f ~/.harmattan-assets/icons/#2c2c2c__32/$(jq .list[0].weather[0].id ~/.cache/forecast.json).png ~/.cache/weather-1.png}${image ~/.cache/weather-1.png -p 42,296 -s 32x32}\
${execi 300 cp -f ~/.harmattan-assets/icons/#2c2c2c__32/$(jq .list[1].weather[0].id ~/.cache/forecast.json).png ~/.cache/weather-2.png}${image ~/.cache/weather-2.png -p 118,296 -s 32x32}\
${execi 300 cp -f ~/.harmattan-assets/icons/#2c2c2c__32/$(jq .list[2].weather[0].id ~/.cache/forecast.json).png ~/.cache/weather-3.png}${image ~/.cache/weather-3.png -p 194,296 -s 32x32}${font}\
